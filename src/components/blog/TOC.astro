---
import type { MarkdownHeading } from "astro";
import { generateToc } from "@/utils/generateToc";
import TOCHeading from "./TOCHeading.astro";

interface Props {
	headings: MarkdownHeading[];
}

const { headings } = Astro.props;
const toc = generateToc(headings);
---

<details class="mb-8 border border-border p-4">
  <summary class="cursor-pointer font-medium uppercase tracking-wider text-text-tertiary hover:text-global-text" style="font-size: var(--text-micro);">
    Table of Contents
  </summary>
  <nav class="mt-4">
    <ol class="space-y-2" style="font-size: var(--text-micro);">
      {toc.map((heading) => <TOCHeading heading={heading} />)}
    </ol>
  </nav>
</details>

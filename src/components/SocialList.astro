---
/** Editorial Minimalism Social Links - text only, no icons **/
const socialLinks: {
	friendlyName: string;
	isWebmention?: boolean;
	link: string;
}[] = [
	{
		friendlyName: "X",
		link: "https://x.com/kirso_",
		isWebmention: true,
	},
	{
		friendlyName: "GitHub",
		link: "https://github.com/kirso",
		isWebmention: true,
	},
	{
		friendlyName: "LinkedIn",
		link: "https://www.linkedin.com/in/kirso_",
		isWebmention: true,
	},
	{
		friendlyName: "Substack",
		link: "https://kirill.substack.com/",
		isWebmention: true,
	},
];
---

<div class="flex flex-wrap items-center gap-x-4" style="font-size: var(--text-micro);">
  {
    socialLinks.map(({ friendlyName, isWebmention, link }, index) => (
      <>
        {index > 0 && <span class="text-text-tertiary">Â·</span>}
        <a
          class="link-muted"
          href={link}
          rel={`noreferrer ${isWebmention ? "me authn" : ""}`}
          target="_blank"
        >
          {friendlyName}
        </a>
      </>
    ))
  }
</div>

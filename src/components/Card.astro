---
/**
 * Brutalist Card - monochrome, clean
 * Use inside a bordered container with divide-y for connected look
 */
export type Props = {
	to: string;
	title: string;
	description: string;
};

const { title, description, to } = Astro.props;
const isExternal = to?.startsWith("http") ?? false;
---

<a
	class="group block p-5 transition-colors hover:bg-global-text hover:text-global-bg"
	href={to}
	target={isExternal ? "_blank" : undefined}
	rel={isExternal ? "noopener noreferrer" : undefined}
>
	<div class="flex items-start justify-between gap-4">
		<div>
			<div class="font-semibold">{title}</div>
			<div class="mt-1 text-sm opacity-70 group-hover:opacity-90">{description}</div>
		</div>
		<span class="text-lg transition-transform group-hover:translate-x-1" aria-hidden="true">â†’</span>
	</div>
</a>

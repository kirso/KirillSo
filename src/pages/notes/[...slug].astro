---
import { getCollection } from "astro:content";
import type { GetStaticPaths, InferGetStaticPropsType } from "astro";
import Note from "@/components/note/Note.astro";
import Schema from "@/components/Schema.astro";
import PageLayout from "@/layouts/Base.astro";

export const prerender = true;

// if you're using an adaptor in SSR mode, getStaticPaths wont work -> https://docs.astro.build/en/guides/routing/#modifying-the-slug-example-for-ssr
export const getStaticPaths = (async () => {
	const allNotes = await getCollection("note");
	return allNotes.map((note) => ({
		params: { slug: note.id },
		props: { note },
	}));
}) satisfies GetStaticPaths;

export type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { note } = Astro.props;

const meta = {
	description:
		note.data.description ||
		`Read about my note posted on: ${note.data.publishDate.toLocaleDateString()}`,
	title: note.data.title,
};

// Breadcrumbs for structured data
const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Notes", url: "/notes/" },
  { name: note.data.title, url: Astro.url.pathname }
];
---

<PageLayout meta={meta}>
  <Schema
    type="article"
    title={note.data.title}
    description={meta.description}
    publishDate={note.data.publishDate}
  />
  <Schema type="breadcrumb" breadcrumbs={breadcrumbs} />
  <Note as="h1" note={note} />
</PageLayout>

---
import { getAllPosts } from "@/data/post";

const posts = await getAllPosts();
---

<html>
  <head>
    <title>OG Image Test</title>
  </head>
  <body class="p-8">
    <h1 class="text-2xl font-bold mb-4">OG Image Test</h1>
    <div class="grid gap-8">
      {posts.map((post) => (
        <div class="border p-4 rounded">
          <h2 class="font-bold mb-2">{post.data.title}</h2>
          <img
            src={`/og-image/${post.id}.png`}
            alt={`OG image for ${post.data.title}`}
            class="border"
          />
        </div>
      ))}
    </div>
  </body>
</html>
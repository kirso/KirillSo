---
import type { MarkdownLayoutProps } from "astro";
import BaseLayout from "./Base.astro";

type Props = MarkdownLayoutProps<{
	title: string;
	description: string;
	lastUpdated?: string;
}>;

const { title, description, lastUpdated } = Astro.props.frontmatter;
---

<BaseLayout meta={{ title, description }}>
  <article>
    <h1 class="page-title mb-4">{title}</h1>
    {description && (
      <p class="text-text-secondary mb-8">{description}</p>
    )}
    {lastUpdated && (
      <p class="text-sm text-text-tertiary mb-12">Last updated: {lastUpdated}</p>
    )}
    <div class="prose max-w-none">
      <slot />
    </div>
  </article>
</BaseLayout>
